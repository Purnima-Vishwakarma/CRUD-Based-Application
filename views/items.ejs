<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>show all data items</title>
    <style>
        body
        {
            background-color: aquamarine;
        }
        .container{
            text-align:left;
            width:50%;
            margin:0 auto;

        }
        a{
            text-decoration: none;
        }
        .btn1
        {
            background-color: yellow;
        }
        .btn2
        {
            background-color:red;
        }
    </style>
   
</head>
<body>
<div class="container">
    <!-- <h1 class="text-center">Items list</h1> -->
    <table border="1">
        <caption><h1>Items list</h1></caption>
        <thead>
            <tr>
                <th>S.No.</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach((item,index)=>{ %>
            <tr>
               <td><%= index+1 %></td>
               <td><%= item.name %></td>
               <td><%= item.description %></td>
               <td><%= item.price %></td>
               <td>
                <a href="/edit-item/<%= item._id %>" >
                    <button class="btn1">Update</button> </a>
                </td>
                <td>
                <form action="/delete-item/<%= item._id %>?_method=DELETE" method="POST">
                    <button class="btn2" type="submit" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                </form>
                </td>
               
               
            </tr>
            <%  });%>
            <td>
                
            </td>
        </tbody>
    </table>
    
</div>
</body>
</html>